<!DOCTYPE html>

<html
  lang="en"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="admin/assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <base href="/">
    <%- include('../shared/head') %>
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">

        <!-- Menu -->
        <%- include('../shared/menu') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('../shared/nav') %>
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">SpotsMap /</span> Event</h4>

              <!-- Bordered Table -->
              <div class="card">
                <h5 class="card-header">Events</h5>
                <div class="card-body">
                  <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Title</th>
                          <th>tag</th>
                          <!-- <th>Users</th> -->
                          <th>Date</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% Event.reverse().forEach(function(event) { %>
                          <tr>
                            <td>
                              <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= event.title %></strong>
                            </td>
                            <td><%= event.tag %></td>
                            <td><span class="badge bg-label-primary me-1"><%= event.date %></td></span></td>
                            <td>
                              <div class="dropdown">
                                <button
                                  type="button"
                                  class="btn p-0 dropdown-toggle hide-arrow"
                                  data-bs-toggle="dropdown"
                                >
                                  <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                  <a class="dropdown-item" href="/admin/eventDone/<%= event.id %>" onclick="return confirmEventDone()"
                                    ><i class="bx bx-edit-alt me-1"></i> 結束活動</a
                                  >
                                  <a class="dropdown-item" href="/admin/eventEdit/<%= event.id %>"
                                    ><i class="bx bx-edit-alt me-1"></i>編輯 Edit</a
                                  >
                                  <a class="dropdown-item" href="/admin/eventDelete/<%= event.id %>" onclick="return confirmEventDelete()"
                                    ><i class="bx bx-trash me-1"></i>刪除 Delete</a
                                  >
                                </div>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <!--/ Bordered Table -->

              <hr class="my-5" />

            </div>
            <!-- / Content -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    <%- include('../shared/scripts')  %>
  </body>
</html>
