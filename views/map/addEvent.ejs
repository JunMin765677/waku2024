<html lang="zh-TW">
  <head>
    <base href="/">
    <%- include('share/head') %>  

    <meta name="application-name" content="滑板地圖SpotsMap">
    <meta property="og:site_name" content="滑板地圖SpotsMap">
    <meta name="author" content="滑板地圖SpotsMap">
    <meta property="article:author" content="https://wakudesign.com/skateboard.map.spot">
  
    <title>活動登錄 - 滑板地圖</title>
  
    <meta name="description" content="活動登錄頁面，刊登全台灣的滑板活動、滑板賽事！">
    <meta name="keywords" content="活動登錄">
    <meta name="url" itemprop="url" content="https://wakudesign.com/skateboard.map.spot/addEvent">
    <meta property="og:url"                content="https://wakudesign.com/skateboard.map.spot/addEvent" />
    <meta property="og:type"               content="website" />
    <meta property="og:title"              content="活動登錄 - 滑板地圖" />
    <meta property="og:description" content="活動登錄頁面，刊登全台灣的滑板活動、滑板賽事！"/>
    
    
    <meta property="og:image"              content="map/img/banner-Media-2.png" />
    <meta property="og:image:width"        content="600" />
    <meta property="og:image:height"       content="600" />
  

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Brygada+1918:ital,wght@0,400;0,600;0,700;1,400&family=Inter:wght@400;700&display=swap" rel="stylesheet">

    <base href="/">


    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <style>
      .row {
        margin-left: 5px;
        margin-right: 5px;
      }
      .modal-backdrop {
        z-index: 1;
      }
      .modal{
        top: 50;
      }
      .form-control-file, .form-control-range {
        display: none;
      }
    </style>  
  </head>

  <body>  
    <div id="preloader">
      <div class="sk-spinner sk-spinner-wave">
        <div class="sk-rect1"></div>
        <div class="sk-rect2"></div>
        <div class="sk-rect3"></div>
        <div class="sk-rect4"></div>
        <div class="sk-rect5"></div>
      </div>
    </div>
    <!-- End Preload -->
  
    <div class="layer"></div>
    <!-- Mobile menu overlay mask -->
  
    <!-- Header================================================== -->
    <header>
      <%- include('share/header') %>
    </header>
    <!-- End Header -->
    <section class="parallax-window" data-parallax="scroll" data-image-src="map/img/allspot.jpg" data-natural-width="1400" data-natural-height="470">
      <div class="parallax-content-1" data-opacity-mask="rgba(0, 0, 0, 0.6)">
        <div class="animated fadeInDown">
          <h1></h1>
          <p></p>
        </div>
      </div>
    </section>
    <!-- End section -->
  
    <main>  
      <div id="position">
        <div class="container">
          <ul>
            <li><a href="/skateboard.map.spot">首頁</a>
            </li>
            <li><a href="/skateboard.map.spot/events">找活動</a></li>
          </ul>
        </div>
      </div>
      <div class="container margin_60">
        <div class="row">
          <div class="box_style_1">
            <h4><b>活動詳情</b></h4>
            <form method="POST" action="skateboard.map.spot/handleAddEvent">
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"><b>活動標題 Title</b></label>
                <input name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label"><b>活動地點 Location</b></label>
                <input name="location" class="form-control" id="exampleInputPassword1" placeholder="" required>
              </div>
              <div class="mb-3">
                <div class="form-group scroll-fix">
                  <label><i class="icon-calendar-7"></i> 活動日期 Date</label>
                  <input name="date" class="date-pick form-control" type="text">
                </div>
              </div>
              <div class="mb-3">
                <div class="form-group scroll-fix-time1">
                  <label><i class=" icon-clock"></i> 活動開始時間 Time</label>
                  <input name="startAt" class="startAt-pick form-control" value="" type="text">
                </div>
              </div>
              <div class="mb-3">
                <div class="form-group scroll-fix-time2">
                  <label><i class=" icon-clock"></i> 活動結束時間 Time</label>
                  <input name="endAt" class="endAt-pick form-control" value="" type="text">
                </div>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label"><b>活動介紹與詳細資訊 Detail</b></label>
                <p>建議使用"純文字貼上"。</p>
              </div>
              <div id="summernote"></div>
              <textarea name="detail" style="display:none;"></textarea><br>
              <br>
              <button type="submit" class="btn btn-primary">發佈活動Post</button>
            </form>    
          </div>
        </div>
      </div>

  
    </main>
    <!-- Summernote -->
    <script>
      $(document).ready(function() {
        $('#summernote').summernote({
          placeholder: '請輸入文章內容 ...',
          tabsize: 2,
          height: 100,
          callbacks: {
            onInit: function() {
              // 將編輯器中的內容放到隱藏的 textarea 元素中
              $('textarea[name="detail"]').val($('#summernote').summernote('code'));
            },
            onChange: function() {
              // 當編輯器中的內容發生更改時，更新隱藏的 textarea 元素中的內容
              $('textarea[name="detail"]').val($('#summernote').summernote('code'));
            }
          }
        });
      });
    </script>
    <!-- Common scripts -->
    <!-- <script src="map/js/jquery-3.6.4.min.js"></script> -->
    <script src="map/js/common_scripts_min.js"></script>
    <script src="map/js/functions.js"></script>

    <!--Review modal validation -->
    <script src="map/assets/validate.js"></script>

    <!-- Map -->
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="map/js/map.js"></script>
    <script src="map/js/infobox.js"></script>


    <!-- Gallery -->
    <script src="map/js/jquery.sliderPro.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function ($) {
        $('#Img_carousel').sliderPro({
          width: 960,
          height: 500,
          fade: true,
          arrows: true,
          buttons: false,
          fullScreen: false,
          smallSize: 500,
          startSlide: 0,
          mediumSize: 1000,
          largeSize: 3000,
          thumbnailArrows: true,
          autoplay: false
        });
      });
    </script>

    <!-- Date and time pickers -->
    <script>
    $(function() {
      $('input.date-pick').daterangepicker({
        autoUpdateInput: true,
        parentEl:'.scroll-fix',
        singleDatePicker: true,
        autoApply: true,
        minDate:new Date(),
        showCustomRangeLabel: false,
        locale: {
        format: 'YYYY/MM/DD'
        }
        }, function(start, end, label) {
        console.log('New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('DD-MM-YYYY') + ' (predefined range: ' + label + ')');
      });
      $('input.startAt-pick').timepicker({
        appendWidgetTo: '.scroll-fix-time1',
        minuteStep: 15,
        showInpunts: false
      });
      $('input.endAt-pick').timepicker({
        appendWidgetTo: '.scroll-fix-time2',
        minuteStep: 15,
        showInpunts: false
      });

    });
    </script>


  </body>
</html>
  