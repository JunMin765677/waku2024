<!DOCTYPE html>
<html lang="en">

<head>
	<base href="/">
	<%- include('../share/head') %>
    <!-- CUSTOM CSS -->
    <link href="map/css/custom.css" rel="stylesheet">    
</head>
<body> 

	<%- include('../partials/preloader') %>
	<!-- Header================================================== -->
	<%- include('../share/header-shop') %>	
	<!-- End Header -->
    
	<main>
    <section id="hero" class="login">
    	<div class="container">
        	<div class="row justify-content-center">
            	<div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
                	<div id="login">
                    		<div class="text-center"><img src="map/img/spots-bg.png" alt="Image" width="160" height="34"></div>
                            <hr> 
                            <form action="/skateboard.map.spot/users/register/captcha" method="POST">
                                <div class="form-group">
                                	<label>電子信箱</label>
                                    <input type="email" name="email" class=" form-control" value="<%= email %>" required>
                                </div>
                                <div class="form-group"> 
                                    <button type="submit" class="btn_1 outline sendCaptcha">發送驗證碼到信箱</button>
                                </div>
                            </form>
                            <form action="/skateboard.map.spot/users/register" method="POST">
                                <input type="hidden" name="email" value="<%= email %>">
                                <div class="form-group">
                                    <input type="captcha" name="captcha" id="captcha" class=" form-control" placeholder="輸入驗證碼" required>
                                </div>
                                <div class="form-group">
                                	<label>設定密碼</label>
                                    <input type="password" name="password" id="password" class=" form-control" id="password1" required>
                                </div>
                                <div class="form-group">
                                	<label>再輸入一次密碼</label>
                                    <input type="password" name="checkPassword" id="checkPassword"  class=" form-control" required>
                                </div>
                                <div id="pass-info" class="clearfix"></div>
                                <button type="submit" class="btn_full">完成註冊</button>
                                <!-- <a href="/users/google" class="btn_full">Google Login</a> -->
                            </form>
                                <label>已註冊?<a href="/skateboard.map.spot/users/login">前往登入</a></label>
                        </div>
                </div>
            </div>
        </div>
    </section>
	</main><!-- End main -->

	<%- include('../share/footer') %>	
	<!-- End footer -->
	<%- include('../partials/scripts') %>

    <%- include('../partials/message') %>


	<!-- Specific scripts -->
	<script src="map/js/pw_strenght.js"></script>
	

  </body>
</html>